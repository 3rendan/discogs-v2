<div class="row">
  <div class="col-9">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Email</th>
          <th scope="col">Full Name</th>
          <th scope="col">Profile</th>
          <th scope="col">End Association</th>
        </tr>
      </thead>
      <tbody>
        <% @friends.each do |friend| %>
        <tr>
          <td><%= friend.email %></td>
          <td><%= friend.full_name %></td>
          <td><%= link_to "View profile", user_path(friend),
                                class: "btn btn-sm btn-success" %></td>
          <td><%= link_to 'Stop following', friendship_path(friend), method: :delete, data: {confirm: 'Are you sure'},
                                                        class: 'btn btn-sm btn-warning' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
